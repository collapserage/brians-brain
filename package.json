{
  "name": "brians-brain",
  "version": "2.0.0",
  "description": "Brian's Brain cellular automaton written in Typescript and React",
  "author": "collapserage",
  "license": "ISC",
  "scripts": {
    "start": "parcel ./src/index.html --port 8080 --open",
    "build": "parcel build ./src/index.html --public-url .",
    "check": "tsc --noEmit && eslint src --ext .js,.jsx,.ts,.tsx",
    "deploy": "npm run check && npm run build && gh-pages -d dist"
  },
  "dependencies": {
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "styled-components": "^5.2.1"
  },
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.1",
    "@types/react": "^16.9.56",
    "@types/react-dom": "^16.9.9",
    "@types/styled-components": "^5.1.4",
    "eslint": "^7.2.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.0.0",
    "gh-pages": "^3.1.0",
    "parcel-bundler": "^1.12.4",
    "typescript": "^4.0.5"
  }
}
